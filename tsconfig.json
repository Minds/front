{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2018",
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "fs": [
        "./shims/noop"
      ],
      "bn.js": [
        "../node_modules/bn.js/lib/bn.js"
      ],
      "ngx-plyr": [
        "../node_modules/ngx-plyr/dist/ngx-plyr"
      ],
      "stream": [
        "../node_modules/stream-browserify"
      ],
      "os": [
        "../node_modules/os-browserify"
      ],
      "http": [
        "../node_modules/stream-http"
      ],
      "https": [
        "../node_modules/https-browserify"
      ],
      "crypto": [
        "../node_modules/crypto-browserify"
      ],
      "util": [
        "../node_modules/util"
      ],
      "assert": [
        "../node_modules/assert"
      ]
    }
  }
}