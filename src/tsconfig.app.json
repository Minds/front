{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2020",
    "types": [
      "node"
    ],
    "sourceMap": false
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.d.ts"
  ],
  "exclude": [
    "test.ts",
    "app/mocks",
    "app/utils/mock.ts",
    "**/*.spec.ts",
    "**/testing/*",
    "**/*.stories.*"
  ]
}
