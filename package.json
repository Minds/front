{
  "name": "minds-front",
  "version": "1.0.0",
  "description": "Front end repository for Minds",
  "scripts": {
    "gulp": "gulp",
    "postinstall": "typings install",

    "extract": "gulp prepare.prod && ng-xi18n -p angular-tsconfig.json",
    "postextract": "rimraf .ngcli-build/ && rmv \"^messages\\.(.*)$\" ./app/locale/Default.\\$1",

    "clean": "rimraf .tmp/ .tmp.aot/",
    "compile-aot": "ngc -p tsconfig-aot.json",
    "compile-embed-aot": "ngc -p tsconfig-embed-aot.json",
    "bundle": "rollup -c rollup-config.ts",
    "bundle-embed": "rollup -c rollup-config-embed.ts",

    "prebuild-base": "npm run clean",
    "build-base": "npm run compile-aot && npm run bundle",

    "prebuild-embed": "npm run clean",
    "build-embed": "npm run compile-embed-aot && npm run bundle-embed",

    "prebuild-i18n-es": "npm run clean",
    "build-i18n-es": "npm run compile-aot -- --i18nFile=./app/locale/Minds.es.xlf --locale=es --i18nFormat=xlf && npm run bundle -- -o public/js/build-aot.es.js",

    "prepare-prod": "gulp prepare.prod",
    "build-shims": "gulp build.bundle.prod --env=prod",
    "build-index-prod": "gulp build.index --env=prod",

    "build-prod": "npm run prepare-prod && npm run build-base && npm run build-embed && npm run build-i18n-es && npm run build-shims",
    "postbuild-prod": "npm run clean",

    "build": "npm run build-prod && npm run build-index-prod --"
  },
  "dependencies": {
    "@angular/common": "2.2.2",
    "@angular/compiler": "2.2.2",
    "@angular/compiler-cli": "2.2.2",
    "@angular/core": "2.2.2",
    "@angular/forms": "2.2.2",
    "@angular/http": "2.2.2",
    "@angular/platform-browser": "2.2.2",
    "@angular/platform-browser-dynamic": "2.2.2",
    "@angular/platform-server": "2.2.2",
    "@angular/router": "3.2.2",
    "braintree-web": "2.15.2",
    "es6-module-loader": "^0.17.8",
    "es6-promise": "^3.1.2",
    "core-js": "^2.4.0",
    "intl": "^1.0.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.12",
    "socket.io-client": "^1.4.5",
    "systemjs": "^0.19.18",
    "tinymce": "^4.2.6",
    "zone.js": "0.6.23",
    "gun": "github:amark/gun#0.5"
  },
  "devDependencies": {
    "async": "^1.4.2",
    "babel": "^5.8.23",
    "chalk": "^1.1.1",
    "connect": "^3.3.5",
    "del": "^1.1.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.0.2",
    "gulp-bump": "^0.3.1",
    "gulp-concat": "^2.5.2",
    "gulp-css-globbing": "^0.1.4",
    "gulp-filter": "^2.0.2",
    "gulp-inject": "^1.3.1",
    "gulp-inline-ng2-template": "^1.0.0",
    "gulp-load-plugins": "^0.10.0",
    "gulp-minify-css": "^1.1.6",
    "gulp-minify-html": "^1.0.3",
    "gulp-plumber": "~1.0.1",
    "gulp-sass": "^2.0.3",
    "gulp-shell": "~0.4.3",
    "gulp-sourcemaps": "~1.5.2",
    "gulp-template": "^3.0.0",
    "gulp-tslint": "^3.3.0",
    "gulp-tslint-stylish": "^1.0.4",
    "gulp-typescript": "~2.13.0",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.2.4",
    "jasmine-core": "~2.3.4",
    "jasmine-spec-reporter": "^2.4.0",
    "karma": "~0.12.37",
    "karma-chrome-launcher": "~0.2.0",
    "karma-jasmine": "~0.3.6",
    "merge-stream": "^1.0.0",
    "open": "0.0.5",
    "pixl-xml": "^1.0.10",
    "protractor": "^2.5.1",
    "rimraf": "^2.5.4",
    "rmv": "^1.0.0",
    "rollup": "^0.36.3",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
